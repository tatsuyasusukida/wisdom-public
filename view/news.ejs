<%- partial.admissionHeader %>

<div class="jumbotron" aria-hidden="true">
  <img src="<%= env.STATIC_URL %>/img/news-jumbotron.jpg" alt="">
  <div class="container">
    <div class="jumbotron-title">
      <div>
        新着情報<small>NEWS</small>
      </div>
    </div>
  </div>
</div>

<nav aria-label="パンくずリスト" class="breadcrumb">
  <div class="container">
    <ul>
      <li>
        <a href="/">TOP</a>
      </li>
      <li class="ia-active" aria-current="page">
        新着情報
      </li>
    </ul>
  </div>
</nav>

<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="newsDetail">
          <h1><%= news.title %></h1>
          <div class="newsDetail-date"><%= news.dateText %></div>
          <p>
            <% news.textLines.forEach((line, i) => { %>
              <% if (i >= 1) { %>
                <br>
              <% } %>
              <%= line %>
            <% }) %>
          </p>
          <% if (newsLinks && newsLinks.length >= 1) { %>
            <ul>
              <% for (const newsLink of newsLinks) { %>
                <li>
                  <a href="<%= newsLink.url %>"><%= newsLink.title %></a>
                </li>
              <% } %>
            </ul>
          <% } %>
          <% if (newsImages && newsImages.length >= 1) { %>
            <div class="newsDetail-image">
              <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
                <% for (const newsImage of newsImages) { %>
                  <div class="col">
                    <a href="<%= newsImage.originalUrl %>">
                      <img src="<%= newsImage.thumbnailUrl %>" alt="<%= newsImage.alt %>">
                    </a>
                  </div>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>

<%- partial.admissionFooter %>
